---
import LandingLayout from "../layouts/LandingLayout.astro";
import Hero from "../components/Hero.astro";

const pageTitle = "Pomotto | Home";
const pageDescription =
	"A pomodoro timer for doers. Maintain laser focus and preserve energy throughout the day. Minimalist, distraction-free, and designed for deep work.";
const pageUrl = "https://www.pomotto.app";
const pageImage = "https://www.pomotto.app/images/pomotto-og-image.png";
---

<script async src="https://tally.so/widgets/embed.js"></script>

<LandingLayout
	title={pageTitle}
	description={pageDescription}
	url={pageUrl}
	image={pageImage}
>
	<Hero />
</LandingLayout>
